{
	"compilerOptions": {
		// "module": "esnext",

		"target": "es2017",
		// "target": "es6",
		"module": "NodeNext", // Changed from "commonjs" to "ESNext"
		"moduleResolution": "nodenext", // Added to handle module resolution
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"sourceMap": true
	},
	"include": ["./src"],
	"exclude": ["node_modules"]
}
